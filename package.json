{
  "name": "microdose",
  "version": "0.6.40",
  "description": "A light-weight TypeScript web framework for Node with minimum external dependencies.",
  "homepage": "https://borislemke.gitbooks.io/microdose/content/",
  "keywords": [
    "framewrok",
    "node",
    "typescript",
    "http",
    "express",
    "decorators"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run dev",
    "prebuild": "npm run clean",
    "build": "npm run compile:prod",
    "predev": "npm run clean",
    "dev": "concurrently \"npm run compile\" \"npm run serve\" ",
    "preclean": "npm run rimraf -- dist-test",
    "clean": "npm run rimraf -- dist",
    "rimraf": "rimraf",
    "compile:prod": "tsc -p tsconfig.json",
    "compile": "tsc --watch -p tsconfig.json",
    "postcompile": "wait-on dist/index.js && npm run serve",
    "serve": "wait-on dist/_example.js && nodemon dist/_example.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Boris Lemke <boris@fleava.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borislemke/microdose.git"
  },
  "bugs": {
    "url": "https://github.com/borislemke/microdose/issues"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^7.0.21",
    "@types/parseurl": "^1.3.1",
    "@types/uws": "^0.13.0",
    "body-parser": "^1.17.2",
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.3.2",
    "tslint-config-standard": "^5.0.2",
    "typescript": "^2.3.2",
    "uws": "^0.14.5",
    "wait-on": "^2.0.2"
  },
  "dependencies": {
    "parseurl": "^1.3.1"
  }
}
